    "@types/request": "^2.48.3",
    "@types/semver": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.12.0",
    "ava": "^2.4.0",
    "cpx": "^1.5.0",
    "eslint": "^6.5.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-markdown": "^1.0.0",
    "jsdom": "^15.2.0",
